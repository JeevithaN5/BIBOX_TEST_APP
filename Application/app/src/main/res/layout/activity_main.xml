<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout android:id="@+id/image_menu"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:background="#FFA500"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView android:id="@+id/mobile"
                android:layout_width="190px"
                android:layout_height="200px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:src="@drawable/mobile" />
            <ImageView android:id="@+id/cycle"
                android:layout_width="190px"
                android:layout_height="200px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:src="@drawable/cycle" />
            <ImageView android:id="@+id/bike"
                android:layout_width="190px"
                android:layout_height="200px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:src="@drawable/mbike" />
            <ImageView android:id="@+id/car"
                android:layout_width="190px"
                android:layout_height="200px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:src="@drawable/car" />

        </LinearLayout>
        <RelativeLayout android:id="@+id/drop_here"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ADEF"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView android:id="@+id/dmobile"
                android:layout_width="190px"
                android:layout_height="200px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:src="@drawable/mobile" />
            <ImageView android:id="@+id/dcycle"
                android:layout_width="190px"
                android:layout_height="200px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:src="@drawable/cycle" />
            <ImageView android:id="@+id/dbike"
                android:layout_width="190px"
                android:layout_height="200px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:src="@drawable/mbike" />
            <ImageView android:id="@+id/dcar"
                android:layout_width="190px"
                android:layout_height="200px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:src="@drawable/car" />

            <ImageView android:id="@+id/man"
                android:layout_width="220px"
                android:layout_height="220px"
                android:src="@drawable/man" />

        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>